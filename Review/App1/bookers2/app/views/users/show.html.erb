<%= render 'books/error', book: @book %>

<div class="container py-5">
  <div class="row">

  <div class="col-md-3">
    <%= render 'users/other_user_info', user: @user %>
    <%= render 'books/newbook', book: @book %>
  </div>

    <div class="offset-md-1 col-md-8">

      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
        <t>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(80,80) %></td>
              <% end %>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>