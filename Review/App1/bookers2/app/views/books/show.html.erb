<div class="container py-5">
  <div class="row">

  <div class="col-md-3">
    <%= render 'users/info', user:@user %>
    <%= render 'books/newbook', book: Book.new %>
  </div>

    <div class="offset-md-1 col-md-8">
      <h2>Book detail</h2>

      <table class="table">
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to @book.user.name, user_path(@user) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>

          <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure?" %></td>
          <% end %>

        </tr>
      </table>
    </div>

  </div>
</div>