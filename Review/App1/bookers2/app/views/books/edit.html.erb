<div class="container">

<%= render 'books/error', book: @book %>

<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %><br>

  <%= f.submit "Update Book", class: "btn btn-success" %>

<% end %>

<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>

</div>